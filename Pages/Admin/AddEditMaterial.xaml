<Page x:Class="Razbor_DE.Pages.Admin.AddEditMaterial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Razbor_DE.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditMaterial">

    <StackPanel Grid.Row="1" Width="452" HorizontalAlignment="Center" VerticalAlignment="Top" Height="425">
        <!-- Название -->
        <TextBlock Text="Название материала:" FontSize="16" FontWeight="Bold" Margin="0,5,0,2"/>
        <TextBox x:Name="txtMaterialName" Text="{Binding Name}" Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC"/>

        <!-- Описание -->
        <TextBlock Text="Описание:" FontSize="16" FontWeight="Bold" Margin="0,10,0,2"/>
        <TextBox x:Name="txtDescription" Text="{Binding Description}" Height="80" Padding="5" FontSize="14" 
             TextWrapping="Wrap" AcceptsReturn="True" BorderBrush="#CCCCCC"/>

        <WrapPanel HorizontalAlignment="Stretch">
            <StackPanel Width="120" HorizontalAlignment="Stretch" Margin="5">
                <!-- Цена -->
                <TextBlock Text="Цена:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtCost" Text="{Binding Cost}" Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC"/>
            </StackPanel>

            <StackPanel Width="100" HorizontalAlignment="Stretch" Margin="5">
                <!-- Мин. кол-во -->
                <TextBlock Text="Мин. кол-во:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtMinQuantity" Text="{Binding MinQuantity}" Height="35" Padding="5" FontSize="14" 
                 BorderBrush="#CCCCCC" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Width="120" HorizontalAlignment="Stretch" Margin="5">
                <!-- Тип материала -->
                <TextBlock Text="Тип материала:" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="txtTypeName"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding TypeId}"
                          Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC"
                          HorizontalAlignment="Stretch"/>
            </StackPanel>



            <StackPanel Width="70" HorizontalAlignment="Stretch" Margin="5">
                <!-- Ед. изм. -->
                <TextBlock Text="Ед. изм.:" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="txtUnit" DisplayMemberPath="Name"
                            SelectedValuePath="Id"
                            SelectedValue="{Binding UnitId}"
                            Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>
        </WrapPanel>

        <WrapPanel HorizontalAlignment="Stretch">
            <StackPanel Margin="5">
                <!-- Кол-во в упаковке -->
                <TextBlock Text="Кол-во в упаковке:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtAmountInPack" Text="{Binding AmountInPack}" Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC" Width="216"/>
            </StackPanel>

            <StackPanel Margin="5">
                <!-- Кол-во на складе -->
                <TextBlock Text="Кол-во на складе:" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtAmountInStorage" Text="{Binding QuantityInStorage}" Height="35" Padding="5" FontSize="14" BorderBrush="#CCCCCC" Width="213"/>
            </StackPanel>


        </WrapPanel>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,20,20,0">
            <Button x:Name="SaveBtn" Content="Сохранить" Width="120" Height="40" Margin="10"
                Background="#2ECC71" Foreground="White" FontSize="14"
                FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="SaveBtn_Click"/>
            <Button x:Name="PhotoBtn" Content="Фото" Width="120" Height="40" Margin="10"
                Background="CornflowerBlue" Foreground="White" FontSize="14"
                FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="PhotoBtn_Click"/>

            <Button x:Name="CancelBtn" Content="Отмена" Width="120" Height="40" Margin="10"
                Background="#E74C3C" Foreground="White" FontSize="14"
                FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="CancelBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
